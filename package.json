{
  "name": "lapworth-nz",
  "description": "Kopaki â€“ personal website for J Lapworth",
  "version": "1.0.0",
  "private": true,
  "author": "Jacob Lapworth <jacob@lapworth.nz> (lapworth.nz)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript"
  ],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "next lint",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@radix-ui/react-icons": "1.1.0",
    "@stitches/react": "1.2.7",
    "framer-motion": "6.2.8",
    "got": "12.0.1",
    "jose": "4.5.1",
    "next": "12.1.0",
    "next-seo": "5.1.0",
    "next-themes": "0.1.1",
    "plaiceholder": "2.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sanitize.css": "13.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@testing-library/cypress": "8.0.2",
    "@types/musickit-js": "1.0.2",
    "@types/node": "17.0.21",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.11",
    "classnames": "2.3.1",
    "commitizen": "4.2.4",
    "cypress": "9.5.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "typescript": "4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
