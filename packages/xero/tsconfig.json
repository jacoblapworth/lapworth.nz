{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@/styled/*": ["./.styled/*"],
      "@/storybook/*": ["./.storybook/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "dist"],
  "extends": "@total-typescript/tsconfig/bundler/dom/library-monorepo",
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", ".storybook/**/*"]
}
