{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@/styled/*": ["./.styled/*"],
      "@/storybook/*": ["./.storybook/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src", ".storybook", ".styled"],
  "exclude": ["**/node_modules", "dist", ".turbo", ".next", "storybook-static"],
  "extends": "@total-typescript/tsconfig/bundler/dom/library-monorepo",
}
