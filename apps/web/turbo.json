{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["tokens", "^build"],
      "env": ["NEXT_PUBLIC_POSTHOG_API_HOST"],
      "outputs": [".next/**", ".vercel/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "tokens": {
      "outputs": [".styled/**"]
    },
    "types:check": {
      "dependsOn": ["^types:check", "types:gen"]
    },
    "types:gen": {
      "outputs": [".next/types/**", "next-env.d.ts"]
    }
  }
}
