{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["tokens", "video", "^build"],
      "env": ["NEXT_PUBLIC_POSTHOG_API_HOST"],
      "outputs": [".next/**", ".vercel/**", "!.next/cache/**", "!.next/dev/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["video:watch"]
    },
    "storybook": {
      "cache": false,
      "dependsOn": ["tokens"],
      "persistent": true
    },
    "tokens": {
      "outputs": [".styled/**"]
    },
    "types:check": {
      "dependsOn": ["^types:check", "types:gen"]
    },
    "types:gen": {
      "outputs": [".next/types/**", "next-env.d.ts"]
    },
    "video": {
      "inputs": ["src/videos/**"],
      "outputs": ["src/videos/**/*.json"]
    },
    "video:watch": {
      "inputs": ["src/videos/**"],
      "outputs": ["src/videos/**/*.json"],
      "persistent": true
    }
  }
}
