{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["tokens", "content", "^build"],
      "env": ["NEXT_PUBLIC_POSTHOG_API_HOST"],
      "outputs": [".next/**", ".vercel/**", "!.next/cache/**"]
    },
    "content": {
      "inputs": ["src/content/**", "velite.config.ts"],
      "outputs": [".velite/**"]
    },
    "content:watch": {
      "inputs": ["src/content/**", "velite.config.ts"],
      "outputs": [".velite/**"],
      "persistent": true
    },
    "dev": {
      "with": ["content:watch"]
    },
    "tokens": {
      "outputs": [".styled/**"]
    },
    "types:check": {
      "dependsOn": ["^types:check", "types:gen"]
    },
    "types:gen": {
      "outputs": [".next/types/**", "next-env.d.ts"]
    }
  }
}
