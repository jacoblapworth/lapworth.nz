{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["tokens", "content", "^build"],
      "env": ["NEXT_PUBLIC_POSTHOG_API_HOST"],
      "outputs": [".next/**", ".vercel/**", "!.next/cache/**"]
    },
    "content": {
      "dependsOn": ["^content"],
      "inputs": ["src/content/**", "velite.config.ts"],
      "outputs": [".velite/**", "public/static/**"]
    },
    "content:watch": {
      "dependsOn": ["^content:watch"],
      "inputs": ["src/content/**", "velite.config.ts"],
      "outputs": [".velite/**", "public/static/**"],
      "persistent": true
    },
    "dev": {
      "with": ["content:watch"]
    },
    "tokens": {
      "dependsOn": ["^tokens"],
      "outputs": [".styled/**"]
    }
  }
}
