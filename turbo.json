{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "globalEnv": [
    "APPLE_TEAM_ID",
    "APPLE_MUSIC_KEY_ID",
    "APPLE_MUSIC_PRIVATE_KEY",
    "APPLE_MUSIC_USER_TOKEN",
    "CYPRESS_INSTALL_BINARY",
    "GARMIN_MAPSHARE_FEED_KEY",
    "GOOGLE_CONTAINER_ID",
    "GOOGLE_MEASUREMENT_ID",
    "KV_URL",
    "KV_REST_API_URL",
    "KV_REST_API_TOKEN",
    "KV_REST_API_READ_ONLY_TOKEN",
    "KLAVIYO_API_KEY",
    "SENTRY_AUTH_TOKEN",
    "RESEND_API_KEY",
    "ENABLE_EXPERIMENTAL_COREPACK"
  ],
  "globalDependencies": [
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "passThroughEnv": [
        "SENTRY_AUTH_TOKEN"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        ".styled/**",
        "!.next/cache/**"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ],
      "persistent": true
    }
  }
}
