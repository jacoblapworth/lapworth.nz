{
  "$schema": "https://turborepo.com/schema.json",
  "envMode": "loose",
  "globalDependencies": [".env"],
  "globalEnv": [
    "APPLE_TEAM_ID",
    "APPLE_MUSIC_KEY_ID",
    "APPLE_MUSIC_PRIVATE_KEY",
    "APPLE_MUSIC_USER_TOKEN",
    "CYPRESS_INSTALL_BINARY",
    "GARMIN_MAPSHARE_FEED_KEY",
    "KV_URL",
    "KV_REST_API_URL",
    "KV_REST_API_TOKEN",
    "KV_REST_API_READ_ONLY_TOKEN",
    "KLAVIYO_API_KEY",
    "SENTRY_AUTH_TOKEN",
    "RESEND_API_KEY"
  ],
  "globalPassThroughEnv": ["COREPACK_HOME", "ENABLE_EXPERIMENTAL_COREPACK"],
  "tasks": {
    "//#lint:ci": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": ["^format"],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md}", "biome.json"]
    },
    "lint": {
      "dependsOn": ["tokens", "^lint"]
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "types:check": {
      "dependsOn": ["^types:check"],
      "inputs": ["**/*.{ts,tsx}"]
    }
  },
  "ui": "tui"
}
